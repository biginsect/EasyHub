<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_home_nav"
    android:id="@+id/ll_drawer_left"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/im_my_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/app_logo"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EasyHub"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                />

            <TextView
                android:id="@+id/tv_join_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="An android client for GitHub"
                android:lines="1"
                />
        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/btn_toggle_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/iv_drop_down"
            android:tint="?title_color"
            android:padding="12dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:layout_marginTop="-12dp"
            android:layout_marginBottom="-12dp"
            android:layout_marginEnd="-20dp"
            />
    </LinearLayout>

</LinearLayout>
