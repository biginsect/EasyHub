<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myBackgroundColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--登录页面用到的NoActionbar主题.-->
    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/myBackgroundColor</item>
    </style>

    <style name="HomePageTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--页面背景色-->
        <item name="colorPrimary">@color/myBackgroundColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--actionbar文字颜色-->
        <!--<item name="android:textColorPrimary">#E5E5E5</item>-->
    </style>
</resources>
